.currencyPair 
    width: 30%
    display: block
    float: left

.bidPrice, .askPrice
    text-align: right
    width: 25%
    display: block
    float: left

.bidArrow, .askArrow
    width: 20px;
    display: block;
    float: left;

.bidArrow.up, .askArrow.up
    color: rgb(255,178,178);

.bidArrow.down, .askArrow.down 
    color: rgb(196,217,247);



#detail .label
    font-size: small

#detail .currencyPair
    font-size: xx-large
    text-align: right

#detail .bidPrice, #detail .askPrice
    font-size: xx-large
    text-align: right

#detail .changePrice, #detail .highPrice, #detail .lowPrice
    font-size: large
    text-align: right

#detail .barArea
    clear: both;
    width: 320px
    height: 200px

.jqplot-axis {
    font-size: x-small;
}


